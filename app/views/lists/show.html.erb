<% @list.movies.each do |movie| %>
    <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
    <strong><%= movie.title %> <br>
    <%= movie.rating %></strong>
    <%= movie.overview %><br>
    <%= bookmark.comment %><br>
    <%= link_to 'detete this bookmark', bookmark_path(bookmark), method: :delete, data: { confirm: 'Are you sure you want to delete this list?' } %>
    <% end %>
